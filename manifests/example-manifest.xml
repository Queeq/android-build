<?xml version="1.0" encoding="UTF-8"?>
<!--
  Example Android Repo Manifest

  This manifest defines additional repositories to include in your Android build.
  These are layered on top of your base ROM's default.xml (from MANIFEST_URL).

  Common use cases:
  - Add device-specific repositories (device tree, kernel, vendor blobs)
  - Override projects from the base manifest with custom forks
  - Include additional hardware support or features

  For more information on repo manifests:
  https://gerrit.googlesource.com/git-repo/+/HEAD/docs/manifest-format.md
-->
<manifest>

  <!--
    Define remote repositories
    - name: Short identifier used in <project> tags
    - fetch: Base URL for git clones
    - revision: Default branch/tag to checkout (can be overridden per-project)
    - clone-depth: Use shallow clones to save space (optional)
  -->
  <remote name="my-github"
          fetch="https://github.com/your-username"
          revision="main"
          clone-depth="1" />

  <remote name="device-maintainer"
          fetch="https://github.com/device-maintainer"
          revision="lineage-21.0"
          clone-depth="1" />

  <!--
    Device tree repositories
    Define where your device configuration lives
    Path format: device/<manufacturer>/<codename>
  -->
  <project path="device/google/cheetah"
           name="android_device_google_cheetah"
           remote="device-maintainer" />

  <project path="device/google/gs201"
           name="android_device_google_gs201"
           remote="device-maintainer" />

  <!--
    Vendor/proprietary blobs
    Path format: vendor/<manufacturer>/<codename>
  -->
  <project path="vendor/google/cheetah"
           name="proprietary_vendor_google_cheetah"
           remote="device-maintainer" />

  <project path="vendor/google/gs201"
           name="proprietary_vendor_google_gs201"
           remote="device-maintainer" />

  <!--
    Kernel repositories
    Path format: kernel/<manufacturer>/<platform>
  -->
  <project path="kernel/google/gs201"
           name="android_kernel_google_gs201"
           remote="device-maintainer" />

  <!-- Some kernels are split into modules -->
  <project path="kernel/google/gs201-modules"
           name="android_kernel_google_gs201-modules"
           remote="device-maintainer" />

  <!--
    Hardware support (optional)
    Some devices need manufacturer-specific hardware support
  -->
  <project path="hardware/google/pixel"
           name="android_hardware_google_pixel"
           remote="device-maintainer" />

  <!--
    Remove projects from base manifest
    Use this to exclude projects you don't need or want to replace

    <remove-project name="LineageOS/android_device_google_cheetah" />
    <remove-project name="LineageOS/android_kernel_google_gs201" />
  -->

</manifest>
